<div class="container">
  <div class="row center">
    <div class="col s12">
      <div class="divider"></div>
      <div class="section">
        {{#if message}}
          <div class="card-panel red lighten-2">{{message}}</div>
        {{/if}}
        <h4>Login</h4>
        <p>Ingrese un nombre de usuario y una contraseña para entrar.</p>
      </div>
    </div>
  </div>
  <div class="row center">
    <form action="/login" method="post" class="col s12" id="login">
      <div class="row center">
        <div class="input-field col s6 offset-s3">
          <input id="nombre" type="text" class="validate" name="username">
          <label for="nombre">Nombre</label>
        </div>
      </div>
      <div class="row center">
        <div class="input-field col s6 offset-s3">
          <input id="password" type="password" class="validate" name="password">
          <label for="password">Constraseña</label>
        </div>
      </div>
        <div class="row center">
          <button class="btn waves-effect waves-light" type="submit" name="action">Enviar</button>
          <button class="btn waves-effect waves-light" type="reset">Limpiar</button>
        </div>
    </form>
  </div>
</div>
